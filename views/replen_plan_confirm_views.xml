<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_replen_plan_confirm_wizard" model="ir.ui.view">
        <field name="name">replen.plan.confirm.wizard.form</field>
        <field name="model">replen.plan.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <p>Attention : Certaines prévisions sont vides ou nulles. Voulez-vous continuer quand même ?</p>
                <footer>
                    <button name="action_confirm" string="Continuer" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Annuler" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 