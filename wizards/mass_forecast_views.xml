<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_replen_plan_mass_forecast_wizard" model="ir.ui.view">
        <field name="name">replen.plan.mass.forecast.wizard.form</field>
        <field name="model">replen.plan.mass.forecast.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="forecast_qty" string="Quantité prévisionnelle à appliquer"/>
                        <field name="select_all" string="Tout sélectionner"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="selected"/>
                            <field name="product_id" readonly="1"/>
                            <field name="product_id" string="Nom complet" readonly="1" widget="many2one_tags"/>
                            <field name="date" readonly="1"/>
                            <field name="historic_qty" readonly="1"/>
                            <field name="forecast_qty" readonly="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_apply" string="Appliquer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 